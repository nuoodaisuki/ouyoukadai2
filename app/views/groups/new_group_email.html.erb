<h1><%= @group.name %> グループメール送信</h1>
<%= form_with url: send_group_email_group_path(@group), method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, '件名' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '内容' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>
  <%= f.submit '送信', class: 'btn btn-primary' %>
<% end %>

<% if user_signed_in? %>
  <table align="center">
    <tr>
      <%= form_with url: search_books_path, method: :get, local: true do |f| %>
        <td><%= f.text_field :tag, class: 'form-control', placeholder: 'タグを検索' %></td>
        <td><%= f.submit '検索', class: 'btn btn-primary' %></td>
      <% end %>
    </tr>
  </table>
<% end %>
